{
    "manifest_version": 3,
    "name": "Explain With SensAI",
    "version": "1.0",
    "description": "Right-click any text or code and get explanation, simplification, or translation using Chrome built-in AI.",
    "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/favicon-16x16.png",
            "32": "icons/favicon-16x16.png",
            "192": "icons/android-chrome-192x192.png",
            "512": "icons/android-chrome-512x512.png"
        },
        "icons": {
           "16": "icons/favicon-16x16.png",
            "32": "icons/favicon-16x16.png",
            "192": "icons/android-chrome-192x192.png",
            "512": "icons/android-chrome-512x512.png"
        }
    },
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}