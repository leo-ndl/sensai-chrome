{
    "manifest_version": 3,
    "name": "Explain This Code - SensAi",
    "version": "1.0",
    "description": "Right-click any text or code and get explanation, simplification, or translation using Chrome built-in AI.",
    "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html"
    },
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}